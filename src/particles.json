{
    "background": {
      "color": {
        "value": "transparent"
      },
      "position": "50% 50%",
      "repeat": "no-repeat",
      "size": "cover"
    },
    "fullScreen": {
      "enable": true,
      "zIndex": 0
    },
    "detectRetina": true,
    "fpsLimit": 60,
    "interactivity": {
      "events": {
        "onClick": {
          "enable": true,
          "mode": "repulse"
        },
        "onHover": {
          "enable": true,
          "mode": "bubble"
        }
      },
      "modes": {
        "bubble": {
          "distance": 400,
          "duration": 0.3,
          "opacity": 1,
          "size": 4
        },
        "grab": {
          "distance": 400,
          "links": {
            "opacity": 0.5
          }
        }
      }
    },
    "particles": {      
      "move": {
        "attract": {
          "rotate": {
            "x": 600,
            "y": 1200
          }
        },
        "direction": "bottom",
        "enable": true,
        "outModes": {
          "bottom": "out",
          "left": "out",
          "right": "out",
          "top": "out"
        }
      },
      "number": {
        "density": {
          "enable": true
        },
        "value": 20
      },
      "opacity": {
        "random": {
          "enable": true
        },
        "value": {
          "min": 0.5,
          "max": 1
        },
        "animation": {
          "speed": 1,
          "minimumValue": 0.1
        }
      },
      "size": {
        "random": {
          "enable": true
        },
        "value": {
          "min": 8,
          "max": 32
        },
        "animation": {
          "speed": 40,
          "minimumValue": 0.1
        }
      },
      "shape":{
        "options":{
            "image": [
                {
                    "src": "img/particles/black.svg",
                    "width": 32,
                    "height": 32
                    },
                    {
                    "src": "img/particles/red.svg",
                    "width": 32,
                    "height": 32
                    },
                    {
                    "src": "img/particles/yellow.svg",
                    "width": 32,
                    "height": 32
                    }
            ]
        },
        "type": "image"
      }
    }
  }